<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:compendium="http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium/gemini-blueprint-compendium.xsd">

    <bean class="org.jahia.modules.jahiacsrfguard.CsrfGuardInitializer" init-method="onStart"/>

    <bean class="org.jahia.modules.jahiacsrfguard.CsrfGuardHttpSessionListener"/>

    <bean id="csrfGuardFilterWrapper" class="org.jahia.modules.jahiacsrfguard.filters.CsrfGuardFilterWrapper">
        <property name="urlPatterns" value="/*"/>
    </bean>

    <compendium:managed-service-factory factory-pid="org.jahia.modules.jahiacsrfguard" interface="org.jahia.modules.jahiacsrfguard.Config" autowire-on-update="true">
        <bean class="org.jahia.modules.jahiacsrfguard.Config" init-method="init" destroy-method="destroy">
            <property name="filter" ref="csrfGuardFilterWrapper"/>
        </bean>
    </compendium:managed-service-factory>

    <bean id="owaspJavaScriptServlet" class="org.jahia.bin.filters.ServletWrappingFilter">
        <property name="urlPatterns" value="/JavaScriptServlet"/>
        <property name="servletName" value="JavaScriptServlet"/>
        <property name="servletClass" value="org.owasp.csrfguard.servlet.JavaScriptServlet"/>
        <property name="initParameters">
            <map key-type="java.lang.String" value-type="java.lang.Boolean">
                <entry key="inject-into-attributes" value="true"/>
            </map>
        </property>
    </bean>

    <bean class="org.jahia.modules.jahiacsrfguard.filters.WebflowServletFilter">
        <property name="urlPatterns" value="/*"/>
    </bean>

    <bean class="org.jahia.modules.jahiacsrfguard.filters.WebflowFilter">
        <property name="priority" value="98"/>
        <property name="description" value="This filter clean the request in the render context before execution by Weblfow"/>
    </bean>

    <bean class="org.jahia.modules.jahiacsrfguard.filters.CsrfGuarfJSFilter">
        <property name="priority" value="18"/>
        <property name="description" value="The CSRF Guard Filter add the csrfguard JS tag to the page, this JS add the CSRF token to the required elements (e.g: form, ajax request, ...)"/>
        <property name="applyOnConfigurations" value="page,gwt,preview"/>
        <property name="applyOnTemplateTypes" value="html,html-*"/>
    </bean>
</beans>
