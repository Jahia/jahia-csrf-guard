<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.jahia.modules.jahiacsrfguard.CsrfGuardInitializer" init-method="onStart"/>

    <bean class="org.jahia.modules.jahiacsrfguard.CsrfGuardHttpSessionListener"/>

    <bean class="org.jahia.modules.jahiacsrfguard.filters.CsrfGuardFilterWrapper">
        <property name="urlPatterns" value="*.do"/>
    </bean>

    <bean id="owaspJavaScriptServlet" class="org.jahia.bin.filters.ServletWrappingFilter">
        <property name="urlPatterns" value="/JavaScriptServlet"/>
        <property name="servletName" value="JavaScriptServlet"/>
        <property name="servletClass" value="org.owasp.csrfguard.servlet.JavaScriptServlet"/>
        <property name="initParameters">
            <map key-type="java.lang.String" value-type="java.lang.Boolean">
                <entry key="inject-into-attributes" value="true"/>
            </map>
        </property>
    </bean>
</beans>
